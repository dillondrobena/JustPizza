<% provide(:title, "Toppings") %>
<body class="crusts-page">
  <h1 class="header-msg">Crusts</h1>
  <div class="row crusts-table-background col-sm-8 col-sm-offset-2">
    <div class="col-md-12 col-sm-offset-0">
      <table class="table table-bordered crusts-table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Enabled</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @crusts.each do |t| %>
          <tr>
            <td><%= t.name %></td>
            <td><%= t.enabled %></td>
            <td><%= link_to 'Show', t , class: "btn btn-primary"%></td>
            <td><%= link_to 'Edit', edit_crust_path(t) , class: "btn btn-primary"%></td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <br>
      <div class="container-fluid new-crust-btn">
        <%= link_to 'New Crust', new_crust_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</body>
