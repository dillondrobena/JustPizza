<% provide(:title, "Toppings") %>
<h1>Crusts</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <table>
      <thead>
      <tr>
        <th>Name</th>
        <th>Enabled</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @crusts.each do |t| %>
          <tr>
            <td><%= t.name %></td>
            <td><%= t.enabled %></td>
            <td><%= link_to 'Show', t , class: "btn btn-primary"%></td>
            <td><%= link_to 'Edit', edit_crust_path(t) , class: "btn btn-primary"%></td>
          </tr>
      <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Crust', new_crust_path, class: "btn btn-primary" %>
  </div>
</div>
