<% provide(:title, "New Crust") %>
<h1>Crusts#new</h1>
<p>Find me in app/views/crusts/new.html.erb</p>
<h1>New Crust</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @topping do |t| %>
        <%= render 'shared/crust_error_messages' %>

        <%= t.label :name %>
        <%= t.text_field :name, class: 'form-control'%>

        <%= t.submit "Create New Topping", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
