<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "JustPizza", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home",   root_path %></li>
        <li><%= link_to "Order", new_order_path %></li>
        <% if not logged_in? %>
            <li><%= link_to "Login", login_path %></li>
            <li><%= link_to "Register", new_user_path %></li>
        <% else %>
            <li><%= link_to "Order History", orders_path %></li>
            <li><%= link_to "Logout", logout_path, method: :delete %></li>
        <% end %>
        <% if logged_in? %>
            <li><%= link_to "Edit", edit_user_path(current_user) %></li>
        <% end %>
        <% if logged_in? and is_admin? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Admin Tools <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Toppings", toppings_path %></li>
                <li><%= link_to "Specials", specials_path %></li>
              </ul>
            </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>