<% if @order.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-danger">
        The form contains <%= pluralize(@order.errors.count, "error") %>.
      </div>
      <ul class="error-group">
        <% @order.errors.full_messages.each do |msg| %>
            <li class="error-cause"><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>
