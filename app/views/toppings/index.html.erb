<% provide(:title, "Toppings") %>
<h1>Toppings#index</h1>
<p>Find me in app/views/toppings/index.html.erb</p>
<h1>New Topping</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <table>
      <thead>
      <tr>
        <th>Name</th>
        <th>Cost</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @toppings.each do |t| %>
          <tr>
            <td><%= t.name %></td>
            <td><%= t.cost %></td>
            <td><%= link_to 'Show', t , class: "btn btn-primary"%></td>
            <td><%= link_to 'Edit', edit_topping_path(t) , class: "btn btn-primary"%></td>
            <td><%= link_to 'Destroy', t, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-primary"%></td>
          </tr>
      <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Topping', new_topping_path, class: "btn btn-primary" %>
  </div>
</div>
