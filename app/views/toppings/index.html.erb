<% provide(:title, "Toppings") %>
<body class="topping-page">
  <h1>Toppings</h1>
  <div class="row topping-table-background col-sm-8 col-sm-offset-2">
    <div class="col-md-12 col-sm-offset-0">
      <table class="table table-bordered topping-table">
        <thead>
        <tr>
          <th>Name</th>
          <th>Cost</th>
          <th>Enabled</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @toppings.each do |t| %>
            <tr>
              <td><%= t.name %></td>
              <td><%= t.cost %></td>
              <td><%= t.enabled %></td>
              <td><%= link_to 'Show', t , class: "btn btn-primary"%></td>
              <td><%= link_to 'Edit', edit_topping_path(t) , class: "btn btn-primary"%></td>
            </tr>
        <% end %>
        </tbody>
      </table>

      <br>
      <div class="container-fluid new-topping-btn">
        <%= link_to 'New Topping', new_topping_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</body>
