<% provide(:title, "New Topping") %>
<body class="new-topping-page">
  <h1 class="header-msg">New Topping</h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3 form-area">
      <%= form_for @topping do |t| %>
          <%= render 'shared/topping_error_messages' %>

          <%= t.label :name %>
          <%= t.text_field :name, class: 'form-control'%>

          <%= t.label :cost %>
          <%= t.text_field :cost, class: 'form-control' %>

          <%= t.submit "Create New Topping", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</body>
