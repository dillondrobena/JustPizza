<body class="edit-page">
  <% provide(:title, "Edit") %>
  <h1 class="header-msg">Update your profile</h1>

  <div class="row">
    <div class="col-md-6 col-md-offset-3 form-area">
      <%= form_for(@user) do |t| %>
          <%= render 'shared/error_messages' %>

          <%= t.label :name %>
          <%= t.text_field :name, class: 'form-control' %>

          <%= t.label :email %>
          <%= t.email_field :email, class: 'form-control' %>

          <%= t.label :password %>
          <%= t.password_field :password, class: 'form-control' %>

          <%= t.label :password_confirmation, "Confirmation" %>
          <%= t.password_field :password_confirmation, class: 'form-control' %>

          <%= t.submit "Save changes", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</body>
