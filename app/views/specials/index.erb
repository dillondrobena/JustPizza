<% provide(:title, "Toppings") %>
<h1>Specials#index</h1>
<p>Find me in app/views/specials/index.html.erb</p>
<h1>Specials</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <table>
      <thead>
      <tr>
        <th>Pizza</th>
        <th>Cost</th>
        <th>Pizza Path</th>
        <th>Enabled</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @specials.each do |t| %>
          <tr>
            <td><%= t.pizza.name %></td>
            <td><%= t.cost %></td>
            <td><%= t.pizza_path %></td>
            <td><%= t.enabled %></td>
            <td><%= link_to 'Show', t , class: "btn btn-primary"%></td>
            <td><%= link_to 'Edit', edit_special_path(t) , class: "btn btn-primary"%></td>
          </tr>
      <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Special',  new_special_path, class: "btn btn-primary" %>
  </div>
</div>
