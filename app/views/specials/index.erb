<% provide(:title, "Toppings") %>
<body class="special-page">
  <h1 class="header-msg">Specials</h1>
  <div class="row special-table-background col-sm-8 col-sm-offset-2">
    <div class="col-md-12 col-sm-offset-0">
      <table class="table table-bordered special-table">
        <thead>
        <tr>
          <th>Pizza</th>
          <th>Cost</th>
          <th>Pizza Path</th>
          <th>Enabled</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @specials.each do |t| %>
            <tr>
              <td><%= t.pizza.name %></td>
              <td><%= t.cost %></td>
              <td><%= t.pizza_path %></td>
              <td><%= t.enabled %></td>
              <td><%= link_to 'Show', t , class: "btn btn-primary"%></td>
              <td><%= link_to 'Edit', edit_special_path(t) , class: "btn btn-primary"%></td>
            </tr>
        <% end %>
        </tbody>
      </table>

      <br>
      <div class="container-fluid new-special-btn">
        <%= link_to 'New Special',  new_special_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</body>
