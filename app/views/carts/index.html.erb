<h1>Carts#index</h1>
<p>Find me in app/views/carts/index.html.erb</p>
<div class="past-order">
  <% @orders.each do |order| %>
      <% order.pizza_orders.each do |pi_order| %>
          <% if pi_order.pizza_type == "Special" %>
              <h3><%= pi_order.pizza.pizza.name %></h3><hr/>
              Crust Type: <%= pi_order.pizza.pizza.crust.name %><br/>
              Toppings:
              <% pi_order.pizza.pizza.toppings.each do |topping| %>
                  <%= topping.name %>
                  <% if topping != pi_order.pizza.pizza.toppings.last %>
                      ,
                  <% end %>
              <% end %>
              <br/>
          <% else %>
              <h3>Custom</h3><hr/>
              Crust Type: <%= pi_order.pizza.crust.name %><br/>
              Toppings:
              <% pi_order.pizza.toppings.each do |topping| %>
                  <%= topping.name %>
                  <% if topping != pi_order.pizza.toppings.last %>
                      ,
                  <% end %>
              <% end %>
              <br/>
          <% end %>
          Quantity: <%= pi_order.quantity %><br/>
      <% end %>
      Total: <%= order.cost %><br/>
      <hr/>
      <%= link_to "Delete", order_path(order), method: :delete, class: 'btn' %>
      <hr/>
  <% end %>
  Grand Total: <%= @grandTotal %> <%= link_to "Place Orders", place_order_path, method: :post, class: 'btn btn-primary' %>
</div>